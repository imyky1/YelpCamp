<% layout('/layout/boilerplate') %>


    <div class="row">
        <h1 class="text-center">Edit campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campground/<%= camp._id%>?_method=put" method="post" class="form-validation" novalidate enctype="multipart/form-data">
                <div class="mb-3">
                <label class="form-label" for="title">Enter Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Enter Title" value="<%= camp.title %>"required >
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Enter location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Enter location" value="<%= camp.location %>" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Enter Price</label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price">â‚¹</span>
                    <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.0" aria-label="price-label" aria-describedby="price-label" value="<%= camp.price %> "required>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">uplaod more image</label>
                <input class="form-control" type="file" name="image" id="image" placeholder="uplaod image" value="<%= camp.image %>" multiple>
            </div>
            <div class="mb-3">
                <% camp.image.forEach(function(img,i){%>
                   <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                   <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                   </div>
                   <label for="image-<%=i%>">delete?</label>
                <% }) %>    
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Enter description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required><%= camp.description %></textarea>        
            </div>
                <button class="btn btn-primary mb-3">Update Campground</button>
            </form>
            <a href="/campground/<%= camp._id %>">Cancel</a>
        </div>
    </div>