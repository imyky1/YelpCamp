<% layout('/layout/boilerplate') %>
<div class="row">
    <h1 class="text-center">New campground</h1>
    <div class="col-md-6 offset-md-3">
        <form class="form-validation" action="/campground" method="post" novalidate enctype="multipart/form-data"> <!-- this enctype will accept the files  -->
            <div class="mb-3">
            <label class="form-label" for="title">Enter Title</label>
            <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Enter Title" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="location">Enter location</label>
            <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Enter location" required>
        </div>
        <div class="mb-3">
            <label class="form-label" for="price">Enter Price</label>
            <div class="input-group mb-3">
                <span class="input-group-text" id="price">â‚¹</span>
                <input type="text" class="form-control" name="campground[price]" id="price" placeholder="0.0" aria-label="price-label" aria-describedby="price-label" required>
              </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Uolaod Image</label>
            <input class="form-control" type="file" name="image" id="image" multiple>
          </div>
